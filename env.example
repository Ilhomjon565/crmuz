# EduCRM Environment Variables
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_NAME=EduCRM
NEXT_PUBLIC_APP_URL=https://educrm.uz
NEXT_PUBLIC_APP_VERSION=1.0.0

# Subdomain URLs (Production)
NEXT_PUBLIC_MAIN_DOMAIN=educrm.uz
NEXT_PUBLIC_TEACHER_URL=https://teacher.educrm.uz
NEXT_PUBLIC_MANAGER_URL=https://manager.educrm.uz
NEXT_PUBLIC_DIRECTOR_URL=https://director.educrm.uz

# Subdomain URLs (Development) 
# Use localhost subdomains or custom hosts
# Add to /etc/hosts:
# 127.0.0.1 teacher.educrm.local
# 127.0.0.1 manager.educrm.local
# 127.0.0.1 director.educrm.local
NEXT_PUBLIC_TEACHER_URL_DEV=http://teacher.localhost:3000
NEXT_PUBLIC_MANAGER_URL_DEV=http://manager.localhost:3000
NEXT_PUBLIC_DIRECTOR_URL_DEV=http://director.localhost:3000

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_YANDEX_ID=YANDEX_ID
NEXT_PUBLIC_FB_PIXEL_ID=FB_PIXEL_ID

# Contact
NEXT_PUBLIC_CONTACT_EMAIL=info@educrm.uz
NEXT_PUBLIC_CONTACT_PHONE=+998-XX-XXX-XXXX
NEXT_PUBLIC_CONTACT_ADDRESS=Tashkent, Uzbekistan

# Social Media
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/educrm_uz
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/educrm.uz
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/educrm.uz
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/educrm_uz

# SEO
NEXT_PUBLIC_SITE_NAME=EduCRM.uz
NEXT_PUBLIC_SITE_DESCRIPTION=O'quv markazlarni avtomatlashtiruvchi tizim
NEXT_PUBLIC_SITE_KEYWORDS=o'quv markaz crm,education crm,uzbekistan education   

# API
NEXT_PUBLIC_API_URL=https://api.educrm.uz
API_SECRET_KEY=your_api_secret_key

# Database
DATABASE_URL=your_database_url
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password

# Email
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Payment
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true 